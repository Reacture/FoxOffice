@model CreateTheaterViewModel

@{
    ViewData["Title"] = "Create Theater";
}

<h2>@ViewData["Title"]</h2>

<h4>Theater</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeatRowCount" class="control-label"></label>
                <input asp-for="SeatRowCount" class="form-control" />
                <span asp-validation-for="SeatRowCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeatColumnCount" class="control-label"></label>
                <input asp-for="SeatColumnCount" class="form-control" />
                <span asp-validation-for="SeatColumnCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
