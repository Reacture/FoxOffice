@model IEnumerable<TheaterViewModel>

@{
    ViewData["Title"] = "Theaters";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Create New Theater</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatRowCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatColumnCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeatRowCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeatColumnCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
            </tr>
        }
    </tbody>
</table>
